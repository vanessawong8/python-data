
class calculadora2:
    def suma(self, numero1, numero2):
        return numero1 + numero2

    def resta(self, numero1, numero2):
        return numero1 - numero2
    
    def multiplicacion(self, numero1, numero2):
        return numero1 * numero2

    def division(self, numero1, numero2):
        if numero2 == 0:
            return "Error: No se puede dividir entre cero."

numero1 = float(input("Ingresa el primer numero"))
numero2 = float(input("Ingresa el segundo numero"))


calc = calculadora2()

resultsuma = calc.suma(numero1, numero2)
resultresta = calc.resta(numero1, numero2)
resultmultiplicacion = calc.multiplicacion(numero1, numero2)
resultdivision = calc.division(numero1, numero2)

print("suma:", resultsuma)
print("resta:", resultresta)
print("multiplicacion:", resultmultiplicacion)
print("division:", resultdivision)


